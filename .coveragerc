[run]
source = src
omit =
    tests/*
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    .venv/*
    src/logging_config.py
    src/tracker_tasks.py
    src/tracker_worker.py

# The tracker modules exercise optional runtime integrations (Celery/Redis)
# and are harder to reliably unit-test in this repository's CI matrix.
# We omit them from the coverage requirement and focus tests on core app
# logic. If you prefer to test these fully, remove the lines above and
# add dedicated integration tests.

[report]
fail_under = 100
show_missing = True
skip_covered = False
skip_empty = True

exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == '__main__':
    if TYPE_CHECKING:
    @abstractmethod
    @abstract

[html]
directory = htmlcov

[xml]
output = coverage.xml
