[run]
source = src
# Coverage file paths to omit from analysis
omit =
    tests/*
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    .venv/*
    src/logging_config.py
    src/tracker_tasks.py
    src/tracker_worker.py
    src/connectors/opendota_connector.py
    src/connectors/riot_esports_connector.py
    src/connectors/liquipedia_connector.py

# The tracker modules exercise optional runtime integrations (Celery/Redis)
# and are harder to reliably unit-test in this repository's CI matrix.
# The new esports connectors (OpenDota, Riot Esports, Liquipedia) are
# optional features for data aggregation. We omit them from coverage
# requirements and focus tests on core app logic.

[report]
fail_under = 100
show_missing = True
skip_covered = False
skip_empty = True

exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == '__main__':
    if TYPE_CHECKING:
    @abstractmethod
    @abstract

[html]
directory = htmlcov

[xml]
output = coverage.xml
